<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Užrašo pavadinimas:"
        android:id="@+id/textNoteName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputNoteName"
        android:layout_below="@+id/textNoteName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:hint="Pavadinimas"
        android:textColorHint="#837F7E"
        android:ellipsize="end"
        android:textColor="#000000"
        android:inputType="text"
        android:gravity="left"
        android:singleLine="true"
        android:background="@drawable/text_field"
        android:text=""/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/inputNoteDate"
        android:layout_below="@+id/inputNoteName"
        android:layout_alignLeft="@+id/inputNoteName"
        android:layout_alignStart="@+id/inputNoteName"
        android:layout_marginTop="5dp"
        android:hint="Data (YYYY-MM-DD)"
        android:textColorHint="#837f7e"
        android:ellipsize="end"
        android:textColor="#000000"
        android:gravity="left"
        android:singleLine="true"
        android:background="@drawable/text_field" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Užrašas:"
        android:id="@+id/textNote"
        android:layout_below="@+id/inputNoteDate"
        android:layout_alignLeft="@+id/inputNoteDate"
        android:layout_alignStart="@+id/inputNoteDate"
        android:layout_marginTop="5dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputNote"
        android:layout_below="@+id/textNote"
        android:layout_alignLeft="@+id/textNote"
        android:layout_alignStart="@+id/textNote"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:lines="9"
        android:background="@drawable/borders"
        android:textColor="#000000"
        android:scrollIndicators="right"
        android:inputType="textMultiLine"
        android:gravity="left|top"
        android:text=""/>
</RelativeLayout>