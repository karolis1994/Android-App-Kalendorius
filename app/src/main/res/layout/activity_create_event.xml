<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kalendorius.karolis.kalendorius.CreateEventActivity"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/CreateEventScreenTitle"
        android:id="@+id/titleCreateEvent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="#3FA9F5" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="com.kalendorius.karolis.kalendorius.EventDataFragment"
        android:id="@+id/fragment2"
        android:layout_below="@+id/titleCreateEvent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        tools:layout="@layout/fragment_event_data" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sukurti"
        android:id="@+id/buttonCreateEvent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="onClickCreateEvent"
        android:background="@drawable/light_blue_button" />

</RelativeLayout>
